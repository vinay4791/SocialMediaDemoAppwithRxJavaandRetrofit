<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vinayjohn.talviewdemoproject.activities.MainActivity">


    <Button
        android:id="@+id/posts_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_primary"
        android:text="View Posts"
        android:theme="@style/PrimaryButtonStyle" />

    <Button
        android:id="@+id/album_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_primary"
        android:text="View Albums"
        android:theme="@style/PrimaryButtonStyle" />


</LinearLayout>
